{
	"name": "touchfishnba",
	"publisher": "cuijinxin",
	"displayName": "touch-fish NBA",
	"keywords": ["nba"],
	"description": "获取实时NBA赛事比分, 致力于更好的摸鱼",
	"repository": "./",
	"version": "0.0.5",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:nbaBarShow",
		"onCommand:nbaBarHide",
		"onCommand:showDetail"
	],
	"main": "./out/extension.js",
	"contributes": {
		"keybindings": [{
			"command": "nbaBarShow",
			"key": "ctrl+f1",
			"mac": "cmd+f1",
			"when": "editorTextFocus"
		},{
			"command": "nbaBarHide",
			"key": "ctrl+f2",
			"mac": "cmd+f2",
			"when": "editorTextFocus"
		}]

	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.47.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"cheerio": "^1.0.0-rc.3",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"ts-loader": "^8.0.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0",
		"webpack": "^4.44.1",
		"webpack-cli": "^3.3.12"
	},
	"icon": "./icon.png",
    "homepage": "./README.md"
}
